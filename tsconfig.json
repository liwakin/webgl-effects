{
  "compilerOptions": {
    "lib": ["DOM", "ES2020"],
    "module": "ES2020",
    "target": "ES2020",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "useDefineForClassFields": true,

    "types": ["./src/type.d.ts"]
  },
  "include": ["src"]
}
